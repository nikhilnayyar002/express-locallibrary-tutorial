extends layout
block content
  script(src='/js/imgupload.js')
  h1=title
  form(method='POST' action='')
    div.form-group
      if(undefined!==author ?author.img : undefined)
        img(id='demo' class="nik-special" src=author.img style="max-width:50% margin:10px;")
      else
        img(id='demo' class="nik-special" src='/images/noimage.jpg' style="max-width:50% margin:10px;")
      label(for='img') Upload author image:
      input.form-control(type="file"  onchange="encodeImageFileAsURL(this)" style="width:50%")
      input#imgbot.form-control(type="hidden" name='imgbot' value='23uh423hui3ui2u3u23j4u2i34j24ij3uu32' )
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='First name (Christian) last' name='first_name' required='true' style="width:50%" value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Family Name:
      input#family_name.form-control(style="width:50%"  type='text', placeholder='Family name (surname)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control(style="width:50%"  type='date', name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_yyyy_mm_dd) )
    div.form-group
      label(for='date_of_death') Date of death:
      input#date_of_death.form-control(style="width:50%"  type='date', name='date_of_death' value=(undefined===author ? '' : author.date_of_death_yyyy_mm_dd) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg